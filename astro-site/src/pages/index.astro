---
import '../styles/global.css';
import { Image } from 'astro:assets';
import Navbar from '../components/react/Navbar';
import Hero from '../components/react/Hero';
import WhyMe from '../components/react/WhyMe';
import Services from '../components/react/Services';
import Portfolio from '../components/react/Portfolio';
import Pricing from '../components/react/Pricing';
import Faq from '../components/react/Faq';
import Contact from '../components/react/Contact';

// Import images for optimization
import eleganceImage from '../../public/elegance-image.webp';
import campImage from '../../public/camp-image.webp';
import terapieImage from '../../public/terapie-image.webp';
import productLaunch from '../../public/assets/illustrations/product-launch.svg';
import creativeWork from '../../public/assets/illustrations/creative-work.svg';
---

<!DOCTYPE html>
<html lang="cs" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <!-- Primary Meta Tags -->
    <title>AKALI | Webdesign Ostrava - Moderní weby, co vydělávají</title>
    <meta name="title" content="AKALI | Webdesign Ostrava - Moderní weby, co vydělávají">
    <meta name="description" content="Stavím moderní weby s důrazem na čistý design a funkčnost. Webové stránky pro firmy a podnikatele v Ostravě. React, TypeScript, Tailwind CSS.">
    <meta name="keywords" content="webdesign, tvorba webu, ostrava, react, moderní web, responzivní web, seo optimalizace">
    <meta name="author" content="AKALI">
    <meta name="robots" content="index, follow">

    <!-- Canonical URL -->
    <link rel="canonical" href="https://akali.cz/">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://akali.cz/">
    <meta property="og:title" content="AKALI | Webdesign Ostrava - Moderní weby, co vydělávají">
    <meta property="og:description" content="Stavím moderní weby s důrazem na čistý design a funkčnost. Webové stránky pro firmy a podnikatele v Ostravě.">
    <meta property="og:image" content="https://akali.cz/elegance-image.png">
    <meta property="og:locale" content="cs_CZ">

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://akali.cz/">
    <meta property="twitter:title" content="AKALI | Webdesign Ostrava - Moderní weby, co vydělávají">
    <meta property="twitter:description" content="Stavím moderní weby s důrazem na čistý design a funkčnost. Webové stránky pro firmy a podnikatele v Ostravě.">
    <meta property="twitter:image" content="https://akali.cz/elegance-image.png">

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;800&family=Kalam:wght@400;700&display=swap" rel="stylesheet" media="print" onload="this.media='all'">
    <noscript><link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;800&family=Kalam:wght@400;700&display=swap" rel="stylesheet"></noscript>

    <!-- JSON-LD Schema Markup -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "ProfessionalService",
      "name": "AKALI",
      "image": "https://akali.cz/elegance-image.png",
      "description": "Stavím moderní weby s důrazem na čistý design a funkčnost. Webové stránky pro firmy a podnikatele v Ostravě.",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Ostrava",
        "addressCountry": "CZ"
      },
      "url": "https://akali.cz",
      "telephone": "+420735040975",
      "email": "podpora@akali.cz",
      "priceRange": "6000 - 11000 Kč",
      "openingHours": "Mo-Fr 09:00-18:00",
      "sameAs": [],
      "areaServed": {
        "@type": "City",
        "name": "Ostrava"
      },
      "serviceType": [
        "Webdesign",
        "Vývoj webových stránek",
        "SEO optimalizace",
        "UI/UX Design"
      ],
      "offers": [
        {
          "@type": "Offer",
          "name": "Esence",
          "description": "One-page webové stránky s responzivním designem a základním SEO",
          "price": "6000",
          "priceCurrency": "CZK"
        },
        {
          "@type": "Offer",
          "name": "Byznys",
          "description": "Komplexní webové řešení s CMS, pokročilým designem a analytikou",
          "price": "11000",
          "priceCurrency": "CZK",
          "priceSpecification": {
            "@type": "PriceSpecification",
            "minPrice": "11000"
          }
        }
      ]
    }
    </script>
</head>

<body class="antialiased">
    <!-- Background Blobs -->
    <div class="blob bg-purple-200 w-96 h-96 top-0 left-0 mix-blend-multiply"></div>
    <div class="blob bg-pink-200 w-96 h-96 bottom-0 right-0 mix-blend-multiply"></div>
    <div class="blob bg-yellow-100 w-64 h-64 top-1/3 right-10 mix-blend-multiply opacity-40"></div>

    <!-- Navbar -->
    <Navbar client:load />

    <!-- Main Content -->
    <main>
        <!-- Hero Section -->
        <Hero client:load productLaunchSrc={productLaunch.src} />

        <!-- Why Me Section -->
        <WhyMe client:visible creativeWorkSrc={creativeWork.src} />

        <!-- Services Section -->
        <Services client:visible />

        <!-- Portfolio Section -->
        <Portfolio client:visible eleganceImageSrc={eleganceImage.src} terapieImageSrc={terapieImage.src} campImageSrc={campImage.src} />

        <!-- Pricing Section -->
        <Pricing client:visible />

        <!-- FAQ Section -->
        <Faq client:visible />

        <!-- Contact Section -->
        <Contact client:visible />
    </main>

    <!-- Footer -->
    <footer class="py-12 bg-white border-t border-black/5">
        <div class="container mx-auto px-6 flex flex-col items-center gap-6">
            <div class="flex flex-col md:flex-row gap-8 items-center">
                <a href="mailto:podpora@akali.cz" class="flex items-center gap-3 text-gray-600 hover:text-akali-primary transition-colors group">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:scale-110 transition-transform"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
                    <span class="font-bold">podpora@akali.cz</span>
                </a>
                <a href="tel:+420735040975" class="flex items-center gap-3 text-gray-600 hover:text-akali-primary transition-colors group">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:scale-110 transition-transform"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
                    <span class="font-bold">+420 735 040 975</span>
                </a>
            </div>
            <p class="text-center text-sm text-gray-400 font-semibold">© 2025 Akali Design. Vytvořeno v Ostravě.</p>
        </div>
    </footer>
</body>
</html>
